<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".WeightFitActivity">
    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <android.support.v7.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="190dp"
            xmlns:android="http://schemas.android.com/apk/res/android"
            xmlns:card_view="http://schemas.android.com/apk/res-auto"
            android:id="@+id/card1"
            android:layout_margin="10dp"
            card_view:cardCornerRadius="11dp">
            <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/leafy"
                    android:src="@drawable/weightfit"
                    android:scaleType="fitXY"/>
            </LinearLayout>

        </android.support.v7.widget.CardView>
        <android.support.v7.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            xmlns:android="http://schemas.android.com/apk/res/android"
            xmlns:card_view="http://schemas.android.com/apk/res-auto"
            android:id="@+id/card2"
            card_view:cardCornerRadius="1dp">

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="match_parent">
                <TextView
                    android:textAppearance="@android:style/TextAppearance.Large"
                    android:lineSpacingExtra="5dp"
                    android:layout_below="@+id/cup"
                    android:id="@+id/heading1"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:text=" Leafy Greens"
                    android:textColor="#130875"
                    android:textStyle="bold"
                    android:textSize="30dp"/>


                <TextView
                    android:textAppearance="@android:style/TextAppearance.Large"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:lineSpacingExtra="10dp"
                    android:layout_margin="10dp"
                    android:textStyle="bold|italic"
                    android:text="@string/leafygreens"
                    android:textSize="20dp"
                    style="@style/TextAppearance.AppCompat.Large"/>
                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/cottege"
                    android:layout_margin="10dp"
                    android:src="@drawable/cottegecheese"
                    android:scaleType="fitXY"/>

                <TextView
                    android:textAppearance="@android:style/TextAppearance.Large"
                    android:lineSpacingExtra="5dp"
                    android:layout_below="@+id/cup"
                    android:id="@+id/heading3"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:text=" Cottege Cheese"
                    android:textColor="#130875"
                    android:textStyle="bold"
                    android:textSize="30dp"/>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:lineSpacingExtra="10dp"
                    android:layout_margin="10dp"
                    android:text="@string/cottegecheese"
                    android:textSize="20dp"
                    android:textStyle="bold|italic"
                    style="@style/TextAppearance.AppCompat.Large"/>

            </LinearLayout>


        </android.support.v7.widget.CardView>
        <android.support.v7.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            xmlns:android="http://schemas.android.com/apk/res/android"
            xmlns:card_view="http://schemas.android.com/apk/res-auto"
            android:id="@+id/card3"
            card_view:cardCornerRadius="1dp">



        </android.support.v7.widget.CardView>


    </LinearLayout>

</android.support.v4.widget.NestedScrollView>
